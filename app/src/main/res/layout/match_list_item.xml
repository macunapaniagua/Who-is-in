<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/match.icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/match.icon"
        android:layout_toEndOf="@+id/match.icon"
        android:layout_toLeftOf="@+id/match.icons.wrapper"
        android:layout_toStartOf="@+id/match.icons.wrapper">

        <TextView
            android:id="@+id/match.soccer.field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            style="@style/TextAppearance.AppCompat.Medium"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/match.date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/darker_gray"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/match.time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/darker_gray"
            android:lines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/match.icons.wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/match.confirmation.status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/match.confirmations"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/match.confirmation.status"/>
    </RelativeLayout>
</RelativeLayout>